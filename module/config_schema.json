{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "orientations": {
            "description": "Limit the orientations to which your app will rotate.",
            "required": false,
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "iphone": {
                    "required": true,
                    "type": "string",
                    "enum": ["any", "portrait", "landscape"]
                },
                "ipad": {
                    "required": true,
                    "type": "string",
                    "enum": ["any", "portrait", "landscape"]
                },
                "android": {
                    "required": true,
                    "type": "string",
                    "enum": ["any", "portrait", "landscape"]
                }
            }
        },
        "fullscreen": {
            "description": "Deprecated. Use `statusbar` option instead.",
            "required": false,
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ios": {
                    "required": false,
                    "type": "boolean",
                    "description": "iOS devices before iOS 7"
                },
                "ios7": {
                    "required": false,
                    "type": "string",
                    "enum": ["not-fullscreen", "no-statusbar", "webview-under-statusbar"],
                    "description": "iOS devices after iOS 7"
                },
                "android": {
                    "required": false,
                    "type": "boolean"
                }
            }
        },
        "statusbar": {
            "required": false,
            "description": "Set statusbar properties where supported.",
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "hidden": {
                    "required": false,
                    "type": "boolean",
                    "description": "Hides the status bar where supported."
                },
                "transparent": {
                    "required": false,
                    "type": "boolean",
                    "description": "Sets status bar transparency where supported."
                },
                "webview-under-statusbar": {
                    "required": false,
                    "type": "boolean",
                    "description": "Allow webview content to extend under status bar where supported."
                },
                "background-color": {
                    "type": "string",
                    "required": false,
                    "description": "The color you'd like to set your status bar to, e.g., #303045. Android 5.0+ only.",
                    "pattern": "^#[\\da-fA-F]{6}$"
                }
            }
        }
    }
}
